    <groupId>TESTNG_BASE_API</groupId>
    <artifactId>TESTNG_BASE_API</artifactId>
    <version>1.0-SNAPSHOT</version>
    <dependencies>
        <dependency>
            <groupId>org.testng</groupId>
            <artifactId>testng</artifactId>
            <version>7.3.0</version>
